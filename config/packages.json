  "other": {
    "oh-my-posh": [
      "curl -s https://ohmyposh.dev/install.sh | sudo bash -s -- -d /usr/local/bin"
    ],
    "deno": [
      "wget -q https://deno.land/install.sh -O /tmp/deno-install.sh",
      "sh /tmp/deno-install.sh -y",
      "rm -f /tmp/deno-install.sh"
    ],
    "zoxide": [
      "curl -sSfL https://raw.githubusercontent.com/ajeetdsouza/zoxide/main/install.sh | sudo sh -s -- --bin-dir /usr/local/bin --man-dir /usr/local/share/man"
    ],
    "nvchad": [
      "git clone https://github.com/LucasionGS/nvim-nvchad /etc/skel/.config/nvim"
    ],
    "rofi-themes": [
      "git clone --depth=1 https://github.com/adi1090x/rofi.git /etc/skel/.config/rofi",
      "cd /etc/skel/.config/rofi && chmod +x setup.sh && bash setup.sh",
      "sed -i \"s/theme='style-10'/theme='style-2'/\" /etc/skel/.config/rofi/launchers/type-3/launcher.sh",
      "rm -rf /etc/skel/.config/rofi"
    ],
    "hypr-settings": [
      "sudo -u ionix_aur rustup default stable",
      "git clone https://github.com/LucasionGS/hypr-settings.git /tmp/archion-settings",
      "chmod 777 /tmp/archion-settings -R",
      "cd /tmp/archion-settings && chmod +x build.sh && sudo -u ionix_aur bash build.sh",
      "rm -rf /tmp/archion-settings"
    ],
    "systemctl-setup": [
      "systemctl enable greetd.service",
      "systemctl enable bluetooth.service",
      "systemctl enable snapd.service"
    ]
  },
  "fish_plugins": [
