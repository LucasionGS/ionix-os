{
  "pacman": [
    "hyprland",
    "alacritty",
    "fish",
    "git",
    "wget",
    "curl",
    "neovim",
    "rustup",
    "copyq",
    "webkit2gtk-4.1"
  ],
  "aur": [
    "ags-hyprpanel-git",
    "anyrun-git",
    "swww",
    "snap",
    "snapd",
    "neofetch",
    "rofi",
    "libcava",
    "ttf-ms-fonts",
    "visual-studio-code-bin",
    "pyprland",
    "wleave-git",
    "libastal-meta",
    "aylurs-gtk-shell",
    "better-control-git",
    "hyprshot-git",
    "google-chrome"
  ],
  "snap": [
    "beekeeper-studio",
    "snap-store"
  ],
  "other": {
    "omf": [
      "wget -q https://raw.githubusercontent.com/oh-my-fish/oh-my-fish/master/bin/install -O /tmp/omf-install",
      "chmod +x /tmp/omf-install",
      "fish -c '/tmp/omf-install --noninteractive --yes'",
      "rm -f /tmp/omf-install"
    ],
    "deno": [
      "wget -q https://deno.land/install.sh -O /tmp/deno-install.sh",
      "sh /tmp/deno-install.sh -y",
      "rm -f /tmp/deno-install.sh"
    ],
    "zoxide": [
      "curl -sSfL https://raw.githubusercontent.com/ajeetdsouza/zoxide/main/install.sh | sh"
    ],
    "nvchad": [
      "git clone https://github.com/LucasionGS/nvim-nvchad ~/.config/nvim"
    ],
    "rofi-themes": [
      "git clone --depth=1 https://github.com/adi1090x/rofi.git /tmp/rofi-custom",
      "cd /tmp/rofi-custom && chmod +x setup.sh && bash setup.sh",
      "sed -i \"s/theme='style-10'/theme='style-2'/\" ~/.config/rofi/launchers/type-3/launcher.sh",
      "rm -rf /tmp/rofi-custom"
    ],
    "hypr-settings": [
      "git clone https://github.com/LucasionGS/hypr-settings.git /tmp/archion-settings",
      "cd /tmp/archion-settings && chmod +x build.sh && bash build.sh",
      "rm -rf /tmp/archion-settings"
    ]
  },
  "fish_plugins": [
    "bobthefish",
    "jorgebucaran/nvm.fish"
  ]
}